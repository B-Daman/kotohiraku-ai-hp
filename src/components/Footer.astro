---
import { siteConfig, navigation, socialLinks } from "../data/siteConfig";

const base = import.meta.env.BASE_URL;
---

<footer class="bg-primary text-white/80">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- ブランド -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <span class="text-accent text-2xl">⛩</span>
          <span class="text-white font-bold text-lg">{siteConfig.name}</span>
        </div>
        <p class="text-sm leading-relaxed">
          {siteConfig.tagline}
        </p>
        <p class="text-sm mt-2">
          {siteConfig.location}
        </p>
      </div>

      <!-- ナビゲーション -->
      <div>
        <h3 class="text-white font-bold text-sm mb-4">ページ一覧</h3>
        <ul class="space-y-2">
          {navigation.map((item) => (
            <li>
              <a
                href={`${base}${item.href.slice(1)}`}
                class="text-sm hover:text-accent transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- SNS -->
      <div>
        <h3 class="text-white font-bold text-sm mb-4">SNS</h3>
        <ul class="space-y-2">
          {socialLinks.map((link) => (
            <li>
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm hover:text-accent transition-colors"
              >
                {link.name} ↗
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-white/20 mt-8 pt-8 text-center text-sm">
      <p>&copy; {new Date().getFullYear()} {siteConfig.name}. All rights reserved.</p>
    </div>
  </div>
</footer>