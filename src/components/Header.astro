---
import { siteConfig, navigation } from "../data/siteConfig";

const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
---

<header class="bg-white/90 backdrop-blur-sm sticky top-0 z-50 border-b border-base-dark">
  <div class="max-w-6xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- ロゴ -->
      <a href={`${base}/`} class="flex items-center gap-2 text-primary font-bold text-lg hover:opacity-80 transition-opacity">
        <span class="text-accent text-2xl">⛩</span>
        <span>{siteConfig.name}</span>
      </a>

      <!-- デスクトップナビ -->
      <nav class="hidden md:flex items-center gap-6">
        {navigation.map((item) => (
          <a
            href={`${base}${item.href}`}
            class:list={[
              "text-sm font-medium transition-colors hover:text-accent",
              currentPath.endsWith(item.href) || (item.href === "/" && currentPath === base + "/")
                ? "text-accent"
                : "text-text-light",
            ]}
          >
            {item.label}
          </a>
        ))}
        <a
          href={`${base}/contact`}
          class="bg-accent text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-accent-dark transition-colors"
        >
          お問い合わせ
        </a>
      </nav>

      <!-- モバイルメニューボタン -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-text-light hover:text-primary transition-colors"
        aria-label="メニューを開く"
      >
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- モバイルメニュー -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-base-dark bg-white">
    <nav class="px-4 py-4 space-y-3">
      {navigation.map((item) => (
        <a
          href={`${base}${item.href}`}
          class:list={[
            "block text-sm font-medium py-2 transition-colors",
            currentPath.endsWith(item.href) || (item.href === "/" && currentPath === base + "/")
              ? "text-accent"
              : "text-text-light hover:text-primary",
          ]}
        >
          {item.label}
        </a>
      ))}
      <a
        href={`${base}/contact`}
        class="block text-center bg-accent text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-accent-dark transition-colors mt-4"
      >
        お問い合わせ
      </a>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");
  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>